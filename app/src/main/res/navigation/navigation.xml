<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/splash_fragment">

    <fragment
        android:id="@+id/splash_fragment"
        android:name="com.xxxxx.myparking.ui.SplashFragment"
        android:label="splash"
        tools:layout="@layout/splash_fragment">
        <action
            android:id="@+id/splash_to_start"
            app:destination="@id/start_fragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/start_fragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/start_fragment"
        android:name="com.xxxxx.myparking.ui.StartFragment"
        android:label="start"
        tools:layout="@layout/start_fragment">
        <action
            android:id="@+id/action_start_fragment_to_share_fragment"
            app:destination="@id/share_fragment" />
        <action
            android:id="@+id/action_start_fragment_to_contacts_fragment"
            app:destination="@id/contacts_fragment" />
    </fragment>

    <dialog
        android:id="@+id/share_fragment"
        android:name="com.xxxxx.myparking.ui.InfoCarFragment"
        android:label="share"
        tools:layout="@layout/share_fragment">
        <argument
            android:name="share_text"
            app:argType="string"/>
        <action
            android:id="@+id/action_share_fragment_to_start_fragment"
            app:destination="@id/start_fragment" />
    </dialog>

    <fragment
        android:id="@+id/contacts_fragment"
        android:name="com.xxxxx.myparking.ui.ContactsFragment"
        android:label="contacts"
        tools:layout="@layout/contacts_fragment">

        <argument
            android:name="share_text"
            app:argType="string"/>
    </fragment>

</navigation>