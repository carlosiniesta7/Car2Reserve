        tools:text="NOMBRE"/>

    <TextView
        android:id="@+id/contactPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="14sp"
        tools:text="677059348"/>

</LinearLayout>